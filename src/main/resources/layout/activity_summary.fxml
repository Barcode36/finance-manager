<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.Pane?>

<fx:root type="VBox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65">
    <HBox fx:id="totalBox" alignment="CENTER" HBox.hgrow="ALWAYS">
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
        <Text text="Total" fill="WHITE">
            <font>
                <Font name="Calibri" size="40"/>
            </font>
        </Text>
        <Pane HBox.hgrow="ALWAYS"/>
        <Text fx:id="totalText" fill="WHITE">
            <font>
                <Font name="Calibri" size="40"/>
            </font>
        </Text>
    </HBox>
</fx:root>

