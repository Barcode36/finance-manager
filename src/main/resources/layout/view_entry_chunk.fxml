<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import com.ccacic.financemanager.controller.control.entrytable.EntryTable?>
<?import javafx.geometry.Insets?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" style="-fx-background-color: #0092B0;">
	<children>
		<HBox spacing="5.0" alignment="CENTER_LEFT">
			<children>
				<Text fx:id="dateRange" fill="WHITE">
					<font>
						<Font style="Calibri" size="24"/>
					</font>
				</Text>
				<Pane  HBox.hgrow="ALWAYS"/>
				<Button fx:id="toggleEntriesButton" text="+" minWidth="31.0" maxWidth="31.0"/>
			</children>
			<padding>
				<Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
			</padding>
		</HBox>
		<EntryTable fx:id="entryTable" visible="false">
			<columnResizePolicy>
				<EntryTable fx:constant="CONSTRAINED_RESIZE_POLICY"/>
			</columnResizePolicy>
		</EntryTable>
	</children>
</fx:root>

